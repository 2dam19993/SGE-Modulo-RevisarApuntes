<?xml version="1.0" encoding="windows-1252"?>

<odoo>
    <data>
        <!-- PARTE DE LAS ACCIONES -->
        <record model="ir.actions.act_window" id="profesional_list_action">
            <field name="name">Profesionales</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- EL MENU DEL MENUBAR-->
        <menuitem id="profesional_menu" name="Profesionales" parent="verificaciones_menu" action="profesional_list_action"/>
        <!-- VISTA DE FORMULARIO -->        
        <record model="ir.ui.view" id="profesional_form_view">
            <field name="name">profesional.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">  
                <notebook position="inside">
                        <page string="Verificaciones Productos">
                            <group>
                                <field name="description" />
                                <field name="contacto" />
                                <field name="nivel_id" />
                            </group>
                        </page>
                </notebook>
            </field>
        </record>
        <!-- VISTA DE BUSQUEDA -->
        <record model="ir.ui.view" id="profesional_search_view">
            <field name="name">profesional.search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search>
                    <field name="nivel_id"/>
                    <field name="name"/>
                </search>
            </field>
        </record>
        <!-- VISTA DE LISTA -->
        <record model="ir.ui.view" id="profesional_tree_view">
            <field name="name">profesional.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree string="Profesional list">
                    <field name="name"/>
                    <field name="nivel_id"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>