<odoo>
        <report
            id="profesional_report"
            string="Profesional report"
            model="res.partner"
            name="verificaciones_de_productos.profesional_report_template"
            report_type="qweb-pdf" />

        <template id="profesional_report_template">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <div class="page">
                        <br/>
                        <br/>
                        <br/>
                    	<div class="titulo">
                            <h1>Informe de <span t-field="docs.name"/></h1>
                        </div>
			<div class="contenido">
                            <h3><strong>Contacto: </strong><span t-field="docs.contacto"/></h3>
                            <h3><strong>Descripción: </strong><span t-field="docs.description"/></h3>
                            <h3><strong>Nivel: </strong><span t-field="docs.nivel_id.nivel_academico"/> de <span t-field="docs.nivel_id.espeificacion"/></h3>
                            <br/>
                            <h3><strong>Revisiones:</strong></h3>
                            <t t-foreach="docs.revision_id" t-as="r">
                                <p><strong>Apunte: </strong><span t-field="r.apunte_id.name"/></p>
                                <p><strong>Descripción: </strong><span t-field="r.apunte_id.description"/></p>
                                <p><strong>Anotacion: </strong><span t-field="r.anotacion"/></p>
                                <hr/>
                            </t>
			</div>
                    </div>
                </t>           
            </t>
        </template>
</odoo>