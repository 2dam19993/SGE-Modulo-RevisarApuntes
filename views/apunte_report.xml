<odoo>
	<report
 	    	id="apunte_report"
   		 string="Apunte report"
   		 model="verificaciones_de_productos.apunte"
   		 report_type="qweb-pdf"
  		 name="verificaciones_de_productos.apunte_report_template"/>

<template id="apunte_report_template">
    <t t-call="report.html_container">
	<t t-call="report.external_layout">
        <div class="page">
			<div class="oe_structure"/>
			<div class="row">
				<div class="col-md-12">
					<h2>
						<span>Informe de de los apuntes:</span>
						<span t-field="docs.name"/>
					</h2>
					<span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
				<br/><br/>
				<p><strong>Descripción: </strong><span t-field="docs.description"/></p>
				<p><strong>Código: </strong><span t-field="docs.codigo_apunte"/></p>
				<br/><p><strong>Revisiones:</strong></p>
				<t t-foreach="docs.revisiones_ids" t-as="r">
					<hr/>
					<p><strong>Profesional: </strong><span t-field="r.profesional_id.name"/></p>
					<p><strong>Titulado en: </strong><span t-field="r.profesional_id.nivel_id.nivel_academico"/> en <span t-field="r.profesional_id.nivel_id.espeificacion"/></p>
					<p><span t-field="r.anotacion"/></p>
